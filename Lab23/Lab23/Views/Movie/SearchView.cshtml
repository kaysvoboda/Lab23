@model Lab23.Data.Model.Movie
@{
    ViewData["Title"] = "SearchView";
}

<h1>Search Movies:</h1>
<h4>By Title:</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchTitle" method="post">
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control"/>
            </div>
            <input type="submit" class="btn btn-primary" value="Search"/>
        </form>
    </div>
</div>

<h4>By Genre:</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchGenre">
            <div class="form-group">
                <label asp-for="Genre" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="Genre" asp-items="@Html.GetEnumSelectList<MovieGenre>()">
                        <option selected="selected" value="">Please select:</option>
                    </select>
                    <span asp-validation-for="Genre" class"text-danger"/>
                </div>
            </div>
            <input type="submit" class="btn btn-primary" value="Search"/>
        </form>
    </div>
</div>